APP_NAME=PMPulse
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8180

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=pmpulse
DB_USERNAME=pmpulse
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=pmpulse_

MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@pmpulse.local"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# AppFolio Configuration
APPFOLIO_CLIENT_ID=
APPFOLIO_CLIENT_SECRET=
APPFOLIO_API_BASE_URL=https://api.appfolio.com

# Sync Configuration
APPFOLIO_FULL_SYNC_TIME=02:00
APPFOLIO_INCREMENTAL_SYNC_INTERVAL=15

# Business Hours Sync Configuration
# When enabled, sync runs every 15 min during business hours, hourly off-hours
APPFOLIO_BUSINESS_HOURS_ENABLED=true
APPFOLIO_BUSINESS_HOURS_TIMEZONE=America/Los_Angeles
APPFOLIO_BUSINESS_HOURS_START=9
APPFOLIO_BUSINESS_HOURS_END=17
APPFOLIO_BUSINESS_HOURS_WEEKDAYS_ONLY=true
APPFOLIO_BUSINESS_HOURS_INTERVAL=15
APPFOLIO_OFF_HOURS_INTERVAL=60

# Feature Flags
FEATURE_INCREMENTAL_SYNC=true
FEATURE_NOTIFICATIONS=true

# Google OAuth (SSO) Configuration
# See CLAUDE.md for Google Cloud Console setup instructions
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"
